{
  "compilerOptions": {
    /* Basic Options */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "newLine": "LF",
    "outDir": "./esm/",
    "target": "ES2018",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "**/*"
  ]
}
